{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Figure 4 : Bar Chart of Continent Averages, 2000-2020",
    "orient": "bottom",
    "fontWeight":"bold"
    },
  "data": {"url":"https://raw.githubusercontent.com/harj2002/DataVis2/main/data/AVERAGES.csv"},
"params": [

    {
      "name": "Year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 5,
        "name": "Year: "
      }
  }
],
"transform": [{"filter": "datum.Year == Year_selection"}],
"vconcat":[{
  "mark": "bar",
    "encoding": {
      "y": {"field": "Continent "},
      "x": {"field": "average_suicide", "type": "quantitative","title":"Average Suicide Rate"},
      "color":{"field": "Continent ",
      "legend": null},
      "tooltip": [{"field": "average_suicide","title": "Average Suicide Rate"}]
    }},

    {
  "mark": "bar",
    "encoding": {
      "y": {"field": "Continent "},
      "x": {"field": "average_gdp", "type": "quantitative","title":"Average GDP Per Capita"},
      "color":{"field": "Continent "},
      "tooltip": [{"field": "average_gdp","title": "Average GDP per Capita","format": ",.2r"}]
    }
    }],

  "config": {
    "background": "#D3D3D3FF",
    "font": "Oswald"
  }

}
