{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Continent View",
  "width": 400,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 5,
        "name": "Year: "
      }
    },
    {
       "name": "zoom_level",
            "value": 500,
            "bind": {
                "input": "range",
                "min": 200,
                "max": 700,
                "step": 100,
                "name": "Zoom: "
            }
    },
    {
            "name": "center_to",
            "value": [15,50],
            "bind": {
                "input": "select",
                "options": [
                    [140, 0],
                    [73,30],
                    [15,50],
                    [-100,40],
                    [-60,-20],
                    [20,10]
                ],
                "labels": ["Oceania", "Asia", "Europe", "North America","South America","Africa"],
                "name": "Map Centre: "
            }
        }
  ],
  "projection": {
        "type": "equalEarth",
        "center": { "expr": "center_to" },
        "scale": { "expr": "zoom_level" }
    },
  "layer":[{
      "data": {
      "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },{
  "data": {
    "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/pivoted_ratevsgdp.csv"
  },
  "transform": [
    {
      "lookup": "CountryName",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME"
      },
      "as": "geo"
    },
    {"filter": "datum.Year == Year_selection"}
  ],
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "SuicideRate",
      "title": "Suicide Rate (Per 100,000)",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10,20,30,40,50],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
      }
    },
    "tooltip": [
      {"field": "CountryName", "type": "nominal", "title": "Country"},
      {"field": "SuicideRate", "type": "quantitative", "title": "Suicide Rate (Per 100,000)"},
      {"field": "GDP_PerCapita", "type": "quantitative", "title": "GDP Per Capita","format": ".0f"}
    ]
  },
  "config": {}
  }]
}