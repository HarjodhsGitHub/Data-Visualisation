{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": {
    "text": "Figure 2 : Scatter Plot of Suicide Rates (Per 100,000) vs GDP per Captia, 2000-2020",
    "orient": "bottom",
    "font":"Arial",
    "fontWeight":"bold"
    },
  "data": {
    "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/Dataset_withcontinents.csv"
  },
  "layer": [{
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP_PerCapita_2000 US$",
      "type": "quantitative",
      "title": "GDP Per Capita",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [100,120000]}
    },
    "y": {
      "field": "SuicideRate_2000",
      "type": "quantitative",
      "axis": {"tickCount": 11},
      "title": "Crude Suicide Rate",
      "scale": {"type": "log", "domain": [1.5, 60]}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "range": [
          "#e41a1c",
          "#377eb8",
          "#4daf4a",
          "#984ea3",
          "#ff7f00",
          "#ffff33"
        ],
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
          ],
          "range": [
          "#e41a1c",
          "#377eb8",
          "#4daf4a",
          "#984ea3",
          "#ff7f00",
          "#ffff33"
        ]
      },
      "legend": {"orient": "top"},
      "opacity": {"value": 0.6}
    },
    "tooltip": [
      {"field": "CountryName", "type": "nominal", "title": "Country"},
      {"field": "GDP_PerCapita_2000 US$", "type": "quantitative", "format": ",", "title": "GDP per Capita"},
      {"field": "SuicideRate_2000", "type": "quantitative", "format": ",", "title": "Suicide Rate"}
    ]
  }
  },{
    "mark": {
      "type": "text",
      "align": "right",
      "baseline": "middle",
      "dx": -12
    },
    "encoding": {
      "x": {
      "field": "GDP_PerCapita_2000 US$",
      "type": "quantitative",
      "title": "GDP Per Capita",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [100,120000]}
    },
    "y": {
      "field": "SuicideRate_2000",
      "type": "quantitative",
      "axis": {"tickCount": 11},
      "title": "Crude Suicide Rate",
      "scale": {"type": "log", "domain": [1.5, 60]}
    },
      "text": {
        "field":"CountryName","type": "nominal"
      },
      "color": {"value": "black"},
            "opacity": {
            "condition": {
              "test": "datum['CountryName']=='Australia'||datum['CountryName']=='Ukraine'||datum['Mexico']=='Chile'||datum['CountryName']=='Brazil'||datum['CountryName']=='Kiribati'||datum['CountryName']=='Japan'||datum['CountryName']=='Zimbabwe'||datum['CountryName']=='Japan'||datum['CountryName']=='Rwanda'||datum['CountryName']=='United Kingdom'||datum['CountryName']=='United States'",
              "value": 1
            },
              "value": 0
            }

    }
  }],
  "config": {
    "background": "#D3D3D3FF"
  }
}
