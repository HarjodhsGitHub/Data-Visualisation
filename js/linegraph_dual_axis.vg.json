{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 400,
  "width": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/countryratesvsyear.csv"
  },
  "params": [
    {
      "name": "Country_selection",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "United Kingdom",
          "Ukraine",
          "United States",
          "Mexico",
          "Chile",
          "Brazil",
          "Australia",
          "Kiribati",
          "Japan",
          "Sri Lanka",
          "Zimbabwe",
          "Rwanda"
        ],
        "labels": [
          "United Kingdom",
          "Ukraine",
          "United States",
          "Mexico",
          "Chile",
          "Brazil",
          "Australia",
          "Kiribati",
          "Japan",
          "Sri Lanka",
          "Zimbabwe",
          "Rwanda"
        ],
        "name": "Country Selection"
      }
    }
  ],
  "repeat": {
    "layer": [
      "Suicide mortality rate (per 100,000 population)",
      "GDP per capita, PPP (current international $)"
    ]
  },
  "spec": {
    "transform": [
      {
        "filter": "datum.country == Country_selection || Country_selection == null"
      }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "year",
        "title": "Year",
        "type": "temporal",
        "timeUnit": "year"
      },
      "color": {
        "condition": {
          "test": "Country_selection != null",
          "datum": {"repeat": "layer"},
          "type": "nominal",
          "legend": {"orient": "top"}
        }
      },
      "y": {"field": {"repeat": "layer"}, "type": "quantitative"},
      "tooltip": [{"field": {"repeat": "layer"}, "type": "quantitative"}]
    }
  },
  "resolve": {"scale": {"y": "independent"}},

  "config": {
    "background": "#D3D3D3FF"
  }
}