{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Suicide vs GDP",
  "data": {
    "url": "https://raw.githubusercontent.com/harj2002/DataVis2/main/data/Dataset_withcontinents.csv"
  },
  "selection": {
    "continent_highlight": {
    "type": "multi",
    "fields": ["Continent"],
    "bind": "legend"
    }
  },
  "params": [
    {
    "name": "Continent_selection",
    "bind": {
        "input": "select",
        "options": [
        null,
        "North America",
        "South America",
          "Europe",
        "Africa",
        "Asia",
        "Oceania"
        ],
        "labels":[
        "Show All",
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
        ],
        "name": "Continent Selection: "
        }
    }
  ],
  "transform": [
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP_PerCapita_2000 US$",
      "type": "quantitative",
      "title": "GDP Per Capita",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [100, 60000]}
    },
    "y": {
      "field": "SuicideRate_2000",
      "type": "quantitative",
      "axis": {"tickCount": 11},
      "title": "Crude Suicide Rate",
      "scale": {"type": "log", "domain": [1.5, 60]}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "range": [
          "#e41a1c",
          "#377eb8",
          "#4daf4a",
          "#984ea3",
          "#ff7f00",
          "#ffff33"
        ],
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
          ],
          "range": [
          "#e41a1c",
          "#377eb8",
          "#4daf4a",
          "#984ea3",
          "#ff7f00",
          "#ffff33"
        ]
      },
      "opacity": {"value": 0.6}
    },
    "opacity": {
      "condition": {"selection": "continent_highlight", "value": 0.6},
      "value": 0.2
    },
    "tooltip": [
      {"field": "CountryName", "type": "nominal", "title": "Country"},
      {"field": "GDP_PerCapita_2000 US$", "type": "quantitative", "format": ",", "title": "GDP per Capita"},
      {"field": "SuicideRate_2000", "type": "quantitative", "format": ",", "title": "Suicide Rate"}
    ]
  }
}
