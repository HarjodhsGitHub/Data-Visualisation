{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",  
  "title": "Suicide vs GDP",
  "data": {
    "url": "https://raw.githubusercontent.com/harj2002/Week10HW/main/data/Dataset_withcontinents.csv"
  },
  "selection": {
    "continent_highlight": {
    "type": "multi",
    "fields": ["Continent"],
    "bind": "legend"
    }
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP_PerCapita_2000 US$",
      "type": "quantitative",
      "title": "GDP Per Capita",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [100, 60000]}
    },
    "y": {
      "field": "SuicideRate_2000",
      "type": "quantitative",
      "axis": {"tickCount": 11},
      "title": "Crude Suicide Rate",
      "scale": {"type": "log", "domain": [1.5, 60]}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "range": [
        "#e41a1c",
        "#984ea3",
        "#ff7f00",
        "#a6cee3",
        "#377eb8",
        "#a65628"
      ],
      "opacity": {"value": 0.6}
    },
    "opacity": {
      "condition": {"selection": "continent_highlight", "value": 0.6},
      "value": 0.2
    },
    "tooltip": [
      {"field": "CountryName", "type": "nominal", "title": "Country"},
      {"field": "GDP_PerCapita_2000 US$", "type": "quantitative", "format": ",", "title": "GDP per Capita"},
      {"field": "SuicideRate_2000", "type": "quantitative", "format": ",", "title": "Suicide Rate"}
    ]
  }
}
